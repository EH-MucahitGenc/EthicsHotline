@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiForgery
@{
    var tokens = AntiForgery.GetAndStoreTokens(Context);
}
<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <meta name="csrf-token" content="@tokens.RequestToken" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="/img/erkurt-favicon.png" sizes="1024x1024" />
</head>
<body class="bg-body">

    <!-- Zengin başlık -->
    <header class="brand-header rich">
        <div class="container">
            <div class="brand-top d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <img src="/img/erkurt-logo.png" class="brand-logo-lg" alt="Erkurt Holding" />
                    <div class="brand-titles">
                        <div class="brand-title h4 m-0 d-flex align-items-center gap-2">
                            <i class="bi bi-shield-check"></i>
                            <span>Etik Hat</span>
                        </div>
                    </div>
                </div>

                <div class="brand-right">
                    <span class="pill-badge">
                        <i class="bi bi-info-circle"></i>
                        Güvenli Bildirim
                    </span>
                </div>
            </div>
            <div class="brandbar"></div>
        </div>
    </header>

    @RenderBody()

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
